<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.robot.dao.ExpertDao">

    <resultMap id="expert" type="com.robot.entity.Expert">
        <id property="id" column="id"/>
        <result property="introduction" column="content"/>
        <result property="name" column="name"/>
        <result property="postDate" column="post_date"/>
    </resultMap>
    <resultMap id="expertArt" type="com.robot.entity.RobotNews">
        <id property="id" column="id"/>
        <result property="title" column="title"/>
        <result property="postDate" column="post_date"/>
        <result property="summary" column="summary"/>
        <result property="content" column="content"/>
        <result property="url" column="source"/>
        <result property="viewCount" column="view_count"/>
    </resultMap>
    <resultMap id="university" type="com.robot.entity.University">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="introduction" column="content"/>
        <result property="postDate" column="post_date"/>
    </resultMap>
    <!--查找专家具体信息-->
    <select id="findExpertInf" parameterType="Integer" resultMap="expert">
        select *from expert_introduction where id = #{id}
    </select>
    <!--查找所有专家-->
    <select id="findAllExpert" resultMap="expert">
        select id,name,post_date from expert_introduction order by post_date desc
    </select>
    <!--查找高校具体信息-->
    <select id="findUniversityInf" parameterType="Integer" resultMap="university">
        select *from college_introduction where id = #{id}
    </select>
    <!--查找所有高校-->
    <select id="findAllUniversity" resultMap="university">
        select id,name,post_date from college_introduction order by post_date desc
    </select>
    <!--查找专家智点前八条-->
    <select id="findExpertArtTop" resultMap="expertArt">
        select id,title,source,post_date from expert_wisdom order by post_date desc limit 8
    </select>
    <!--查找专家智点具体信息-->
    <select id="findExpertArtInf" resultMap="expertArt">
        select *from expert_wisdom where id = #{id}
    </select>
    <select id="findExpertArtByPage" resultMap="expertArt">
        select *from expert_wisdom order by post_date desc
     </select>
</mapper>