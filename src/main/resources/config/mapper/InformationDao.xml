<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.robot.dao.InformationDao">
    <resultMap id="information" type="com.robot.entity.Information">
        <result property="id" column="message_id"/>
        <result property="title" column="title"/>
        <result property="content" column="content"/>
        <result property="link" column="url"/>
        <result property="postDate" column="post_date"/>
        <result property="source" column="source"/>
    </resultMap>
    <!--查询指定文章类型的资讯文章的前八条-->
    <select id="findInformationTop" parameterType="Integer" resultMap="information">
        select *from information where category_id = #{id} order by release_time desc limit 8
    </select>
    <!--查询指定类型的所有资讯文章-->
    <select id="findInformationByPage" parameterType="Integer" resultMap="information">
        select *from information where category_id = #{categoryId} order by release_time desc
    </select>
    <!--根据文章id查询文章具体信息-->
    <select id="findInformationInfo" resultMap="information">
        select *from message_robot where message_id = #{id}
    </select>
    <!--查询行业动态的前十二条-->
    <select id="findInformation1Top" resultMap="information">
        select message_id,title,post_date from message_robot order by post_date desc limit 12
    </select>
    <!--查询行业动态的所有文章（分页）-->
    <select id="findInformation1ByPage" resultMap="information">
        select *from message_robot order by post_date desc
    </select>
</mapper>