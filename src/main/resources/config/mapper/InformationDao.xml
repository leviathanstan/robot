<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.robot.dao.InformationDao">
    <resultMap id="information" type="com.robot.entity.Information">
        <result property="id" column="id"/>
        <result property="title" column="title"/>
        <result property="content" column="content"/>
        <result property="coverImg" column="cover_img"/>
        <result property="link" column="link"/>
        <result property="releaseTime" column="release_time"/>
        <result property="source" column="source"/>
        <result property="summary" column="summary"/>
    </resultMap>
    <!--根据文章id查询文章具体信息-->
    <select id="findInformationInfo" resultMap="information">
        select *from information where id = #{id}
    </select>
    <!--查询指定文章类型的资讯文章的前八条-->
    <select id="findInformationTop" parameterType="Integer" resultMap="information">
        select *from information where category_id = #{id} order by release_time desc limit 8
    </select>
</mapper>