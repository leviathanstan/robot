<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.robot.dao.InformationDao">
    <resultMap id="information" type="com.robot.entity.Information">
        <result property="id" column="id"/>
        <result property="title" column="title"/>
        <result property="content" column="content"/>
        <result property="link" column="url"/>
        <result property="postDate" column="post_date"/>
        <result property="source" column="source"/>
        <result property="viewCount" column="view_count"/>
    </resultMap>

    <!--根据文章id查询行业动态具体信息-->
    <select id="findInformationInfo" resultMap="information">
        select *from message_robot where id = #{id}
    </select>
    <!--查询行业动态的前十二条-->
    <select id="findInformationTop" resultMap="information">
        select id,title,post_date from message_robot order by post_date desc limit 12
    </select>
    <!--查询行业动态的所有文章（分页）-->
    <select id="findInformationByPage" resultMap="information">
        select *from message_robot order by post_date desc
    </select>

    <!--根据文章id查询政策具体信息-->
    <select id="findPolicyInfo" resultMap="information">
        select *from policy_info where id = #{id}
    </select>
    <!--查询政策的前十二条-->
    <select id="findPolicyTop" resultMap="information">
        select id,title,post_date from policy_info order by post_date desc limit 12
    </select>
    <!--查询政策的所有文章（分页）-->
    <select id="findPolicyByPage" resultMap="information">
        select *from policy_info order by post_date desc
    </select>

    <!--根据文章id查询咨询热点具体信息-->
    <select id="findHotspotInfo" resultMap="information">
        select *from hotspot where id = #{id}
    </select>
    <!--查询咨询热点的前十二条-->
    <select id="findHotspotTop" resultMap="information">
        select id,title,post_date from hotspot order by post_date desc limit 12
    </select>
    <!--查询咨询热点的所有文章（分页）-->
    <select id="findHotspotByPage" resultMap="information">
        select *from hotspot order by post_date desc
    </select>

    <!--根据文章id查询行业报告具体信息-->
    <select id="findReportInfo" resultMap="information">
        select *from industry_report where id = #{id}
    </select>
    <!--查询行业报告的前十二条-->
    <select id="findReportTop" resultMap="information">
        select id,title,post_date from industry_report order by post_date desc limit 12
    </select>
    <!--查询行业报告的所有文章（分页）-->
    <select id="findReportByPage" resultMap="information">
        select *from industry_report order by post_date desc
    </select>

</mapper>