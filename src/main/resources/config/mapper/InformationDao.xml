<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.robot.dao.InformationDao">
    <resultMap id="information" type="com.robot.entity.RobotNews">
        <result property="id" column="id"/>
        <result property="title" column="title"/>
        <result property="content" column="content"/>
        <result property="url" column="url"/>
        <result property="postDate" column="post_date"/>
        <result property="source" column="source"/>
        <result property="viewCount" column="view_count"/>
        <result property="readGuide" column="guide"/>
        <result property="img" column="cover"/>
    </resultMap>

    <!--根据文章id查询行业动态具体信息-->
    <select id="findInformationInfo" resultMap="information">
        select *from industry_information where id = #{id}
    </select>
    <!--查询行业动态的前十二条-->
    <select id="findInformationTop" resultMap="information">
        select id,title,post_date from industry_information order by post_date desc limit 12
    </select>
    <!--查询行业动态的所有文章（分页）-->
    <select id="findInformationByPage" resultMap="information">
        select *from industry_information order by post_date desc
    </select>
    <!--根据行业动态的id查询内容-->
    <select id="findInfContent"  resultType="String">
        select content from industry_information where id = #{id}
    </select>

    <!--根据文章id查询政策具体信息-->
    <select id="findPolicyInfo" resultMap="information">
        select *from policy_information where id = #{id}
    </select>
    <!--查询政策的前十二条-->
    <select id="findPolicyTop" resultMap="information">
        select id,title,post_date from policy_information order by post_date desc limit 12
    </select>
    <!--查询政策的所有文章（分页）-->
    <select id="findPolicyByPage" resultMap="information">
        select *from policy_information order by post_date desc
    </select>
    <select id="findPolContent" resultType="String">
        select content from policy_information where id = #{id}
    </select>

    <!--根据文章id查询咨询热点具体信息-->
    <select id="findHotspotInfo" resultMap="information">
        select *from hotspot where id = #{id}
    </select>
    <!--查询咨询热点的前十二条-->
    <select id="findHotspotTop" resultMap="information">
        select id,title,post_date from hotspot order by post_date desc limit 12
    </select>
    <!--查询咨询热点的所有文章（分页）-->
    <select id="findHotspotByPage" resultMap="information">
        select *from hotspot order by post_date desc
    </select>

    <!--根据文章id查询行业报告具体信息-->
    <select id="findReportInfo" resultMap="information">
        select *from industry_report where id = #{id}
    </select>
    <!--查询行业报告的前十二条-->
    <select id="findReportTop" resultType="com.robot.entity.RobotNews">
        select id,title,changed_date as postDate,cover as img from industry_report order by changed_date desc limit 12
    </select>
    <!--查询行业报告的所有文章（分页）-->
    <select id="findReportByPage" resultType="com.robot.entity.RobotNews">
        select *from industry_report order by changed_date desc
    </select>

</mapper>